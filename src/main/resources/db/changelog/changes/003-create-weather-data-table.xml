<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="003-create-weather_data-table" author="dgrishin95">
        <createTable tableName="weather_data">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="location_id" type="BIGINT">
                <constraints nullable="false"
                             foreignKeyName="weather_data_locations_id_fkey"
                             referencedTableName="locations"
                             referencedColumnNames="id"/>
            </column>
            <column name="temperature" type="DECIMAL(4,2)">
                <constraints nullable="false"/>
            </column>
            <column name="feels_like" type="DECIMAL(4,2)">
                <constraints nullable="false"/>
            </column>
            <column name="icon_id" type="VARCHAR(10)"/>
            <column name="wind_speed" type="DECIMAL(4,2)">
                <constraints nullable="false"/>
            </column>
            <column name="humidity" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>